<ul class='video-list media-list'>
    {{#each videos}}
        <li class='video-item media-item-wrap'>
            <video width='320' height='240' controls>
                <source
                    src='{{this.path}}'
                    type='{{this.mimetype}}'
                    class='media-item'
                    data-index='{{@index}}'
                    data-id='{{this.id}}'
                />
                Your browser does not support video player.
            </video>
        </li>
    {{/each}}
</ul>

<link rel='stylesheet' href='/css/media.css' />
<link rel='stylesheet' href='/css/video.css' />